LIBS = @LIBS@
CC = @CC@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
mandir = @mandir@
BINARY = bwm-ng
TARGET = src/$(BINARY)
STRIP = @STRIP@

all:	bwm-ng
	
bwm-ng:
	@( cd src ; $(MAKE) bwm-ng )
	${STRIP}

install: all
	install -D ${TARGET} $(bindir)/$(BINARY)
	install -D bwm-ng.8 $(mandir)/man8/bwm-ng.8
	mandb $(mandir)

clean:
	@( cd src ; $(MAKE) clean )
	-rm -f *~ *.o ${TARGET}

real-clean: clean
	-rm -f config.h Makefile src/Makefile config.log
	-rm -fr autom4te.cache
	-rm -f configure config.status

uninstall:
	rm $(bindir)/$(BINARY)
	rm -f $(mandir)/man8/bwm-ng.8
	mandb $(mandir)
