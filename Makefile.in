LIBS = @LIBS@
CC = @CC@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
mandir = @mandir@/man8
BINARY = bwm-ng
TARGET = src/$(BINARY)
STRIP = @STRIP@

all:	bwm-ng
	
bwm-ng:
	@( cd src ; $(MAKE) bwm-ng )
	${STRIP}

install: all
	install -D ${TARGET} $(bindir)/$(BINARY)
	install -D bwm-ng.8 $(mandir)/bwm-ng.8
	mandb

clean:
	@( cd src ; $(MAKE) clean )
	-rm -f *~ *.o ${TARGET}

real-clean: clean
	-rm -f config.h Makefile src/Makefile config.log
	-rm -fr configsrc/autom4te.cache
	-rm -f configsrc/configure configure config.status

config:
	cd configsrc && autoconf
	cp configsrc/configure ./

uninstall:
	rm $(bindir)/$(BINARY)
